<%- include('header') %>

    <body class="login__dashboard">
        <div class="bg-image" style="background-image: url('../images/bg-image.jpg');">
            <div class="overlay_color">

                <div class="loginDashboard pt-3">
                    <div class="container flexing-main">
                        <div class="row">
                            <nav class="col-md-12 navbar">
                                <div class="container-fluid d-flex justify-content-center">
                                    <a class="navbar-brand text-center" href="/"><img class="logo-login" src="../images/logo.png"></a>
                                </div>
                            </nav>
                            <div class="col-md-12 main-form">
                                <h2>
                                    <center><b><%- type-%> Login</b></center>
                                </h2>
                                <center style="color:<%- color -%>" id="error_display">
                                    <%- error-%>
                                </center>
                                <form action="login" class="login-signup" method="post" enctype="text/html">
                                    <div class="form-group mb-3">
                                        <label for="email" class="mb-2">UEA Email:</label>
                                        <div class="input-group mb-3">
                                            <span class="input-group-text rounded-0" id="basic-addon1"><i class="fa fa-user" aria-hidden="true"></i></span>
                                            <input type="email" class="form-control rounded-0" placeholder="Enter Email" aria-label="Username" aria-describedby="basic-addon1" name="email">
                                        </div>
                                    </div>
                                    <input type="hidden" value="<%- type-%>" name="type">
                                    <div class="form-group mb-3">
                                        <label for="password" class="mb-2">Password:</label>
                                        <div class="input-group mb-3">
                                            <span class="input-group-text rounded-0" id="basic-addon1"><i class="fa fa-unlock-alt" aria-hidden="true"></i></span>
                                            <input type="password" class="form-control rounded-0" placeholder="Enter password" aria-label="password" aria-describedby="basic-addon1" name="password">
                                        </div>
                                    </div>
                                    <div class="mb-3 form-check">
                                        <!----  <input type="checkbox" class="form-check-input" id="exampleCheck1">
                                        <label class="form-check-label" for="exampleCheck1">Remember me</label>
                                    --></div>
                                    <div class="btn-group-login mt-2">
                                        <input type="submit" class="btn btn-magenta w-100 text-uppercase rounded-0" value="Login" name="loginBtn">
                                    </div>
                                    <div class="col-12 text-center mt-4">
                                        <div class="form-check">
                                            <label class="form-check-label" for="gridCheck">DON'T HAVE AN ACCOUNT ? </label> <a class="text-uppercase anchor-magenta" href="/register_<%- type-%>" name="signupBtn">Sign up</a>
                                        </div>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </body>

    </html>